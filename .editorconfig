# EditorConfig - Configurazione consistente tra editor diversi
# https://editorconfig.org

root = true

# Impostazioni per tutti i file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# File di codice (HTML, CSS, JavaScript)
[*.{html,css,js,json}]
indent_style = space
indent_size = 2

# File Markdown
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# File di configurazione
[*.{yml,yaml}]
indent_style = space
indent_size = 2
